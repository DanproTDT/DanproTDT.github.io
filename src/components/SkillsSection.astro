---
import IconContainer from "@components/IconContainer.astro";
import Css from "@assets/icons/css.astro";
import Javascript from "@assets/icons/javascript.astro";
import React from "@assets/icons/react.astro";
import Html from "@assets/icons/html.astro";
import Tailwind from "@assets/icons/tailwind.astro";
import AstroIcon from "@assets/icons/astro.astro";
import Express from "@assets/icons/express.astro";
import Node from "@assets/icons/node.astro";
import Mysql from "@assets/icons/mysql.astro";
import Postgresql from "@assets/icons/postgresql.astro";
import Bash from "@assets/icons/bash.astro";
import Git from "@assets/icons/git.astro";
import Github from "@assets/icons/github.astro";
import Vscode from "@assets/icons/vscode.astro";
import Figma from "@assets/icons/figma.astro";
import PfSense from '@assets/icons/pfsense.astro';
import Splunk from '@assets/icons/splunk.astro';
import Ubuntu from '@assets/icons/ubuntu.astro';
import WindowsAD from '@assets/icons/windowsad.astro';
import Nessus from '@assets/icons/nessus.astro';
import Nmap from '@assets/icons/nmap.astro';
import Wireshark from '@assets/icons/wireshark.astro';
import Nessus2 from '@assets/icons/nessus2.astro';
import Winser from '@assets/icons/winser.astro';
import Cplus from '@assets/icons/c++.astro';
import Csharp from '@assets/icons/csharp.astro';
import Python from '@assets/icons/python.astro';
import SQL from '@assets/icons/sql.astro';
---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-1">Habilidades Técnicas</h2>
  <hr class="mb-6 border-zinc-600">

  <h3 class="text-xl font-medium mb-4 siz">Redes</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="pfSense">
      <PfSense size="size-9" />
    </IconContainer>
    <IconContainer name="Nmap">
      <Nmap size="size-9" />
    </IconContainer>
    <IconContainer name="Wireshark">
      <Wireshark size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Detección de amenazas y análisis de vulnerabilidades</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="Splunk">
      <Splunk size="size-9" />
    </IconContainer>
    <IconContainer name="Nessus">
      <Nessus2 size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Gestión de sistemas y usuarios</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="Windows Server">
      <Winser size="size-9" />
    </IconContainer>
    <IconContainer name="Ubuntu Server">
      <Ubuntu size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Lenguajes de desarrollo y análisis</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="C++">
      <Cplus size="size-9" />
    </IconContainer>
    <IconContainer name="C#">
      <Csharp size="size-9" />
    </IconContainer>
    <IconContainer name="Python">
      <Python size="size-9" />
    </IconContainer>
    <IconContainer name="SQL">
      <SQL size="size-9" />
    </IconContainer>
  </div>
</section>